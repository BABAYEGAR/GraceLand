@using Hotel.Data.Objects.Entities
@{
    var loggedinuser = Session["hotelloggedinuser"] as AppUser;
    var role = Session["role"] as Role;
}

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/DashboardTemplate/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            @if (loggedinuser != null)
            {
                <div class="pull-left info">
                    <p>@loggedinuser.DisplayName</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            }
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a href="@Url.Action("Dashboard", "Home")"><i class="fa fa-circle-o"></i>My Dashboard</a>
                    </li>
                </ul>
            </li>
@if (role != null)
{
    if (role.ManageUsers)
     {
         <li class="treeview">
             <a href="#">
                 <i class="fa fa-pie-chart"></i>
                 <span>Users</span>
                 <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
             </a>
             <ul class="treeview-menu">
                 <li>
                     <a href="@Url.Action("Index", "AppUsers")"><i class="fa fa-circle-o"></i> Users</a>
                 </li>
             </ul>
         </li>
         <li class="treeview">
             <a href="#">
                 <i class="fa fa-pie-chart"></i>
                 <span>Roles & Priviledges</span>
                 <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
             </a>
             <ul class="treeview-menu">
                 <li>
                     <a href="@Url.Action("Index", "Roles")"><i class="fa fa-circle-o"></i> Manage Roles</a>
                 </li>
             </ul>
         </li>
     }
    if (role.ManageItems)
     {
         <li class="treeview">
             <a href="#">
                 <i class="fa fa-laptop"></i>
                 <span>Items</span>
                 <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
             </a>
             <ul class="treeview-menu">
                 <li>
                     <a href="@Url.Action("Index", "Items")"><i class="fa fa-circle-o"></i> Manage Items</a>
                 </li>
             </ul>
         </li>
     }
    if (role.ManageItemCategory)
     {
         <li class="treeview">
             <a href="#">
                 <i class="fa fa-edit"></i> <span>Item Category</span>
                 <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
             </a>
             <ul class="treeview-menu">
                 <li>
                     <a href="@Url.Action("Index", "ItemCategories")"><i class="fa fa-circle-o"></i>Manage Category</a>
                 </li>
             </ul>
         </li>
     }
    if (role.AccessGeneralLog)
     {
         <li class="treeview">
             <a href="#">
                 <i class="fa fa-table"></i> <span>General Log</span>
                 <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
             </a>
             <ul class="treeview-menu">
                 <li>
                     <a href="@Url.Action("Index", "ItemLogs")"><i class="fa fa-circle-o"></i>General Item Logs</a>
                 </li>
             </ul>
         </li>
     }
}
        </ul>
        }
    </section>
    <!-- /.sidebar -->
</aside>